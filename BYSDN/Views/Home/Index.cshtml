@model BYSDN.Models.HomePageModel
@{
    ViewBag.Title = "DashBoard";
    Layout = "~/Views/Shared/_PageLayout.cshtml";
}
<html>
<body>

    <div class="row">
        <div class="col-sm-8">
            <div class="row">
                <div class="col-sm-4">

                    <div class="xe-widget xe-vertical-counter xe-vertical-counter-orange" data-duration="2.5" data-suffix="%" data-to="128.4" data-from="0" data-count=".num" data-decimal=",">
                        <div class="xe-icon">
                            <i class="fa-female"></i>
                        </div>

                        <div class="xe-label">
                            <strong class="num">@Model.UserCount</strong>
                            <span>User Count</span>
                        </div>
                    </div>

                </div>
                <div class="col-sm-4">

                    <div class="xe-widget xe-vertical-counter xe-vertical-counter-danger" data-duration="3" data-suffix="%" data-to="67.9" data-from="0" data-count=".num" data-decimal=",">
                        <div class="xe-icon">
                            <i class="fa-question"></i>
                        </div>

                        <div class="xe-label">
                            <strong class="num">@Model.QuestionCount</strong>
                            <span>Today's Questions</span>
                        </div>
                    </div>

                </div>
                <div class="col-sm-4">
