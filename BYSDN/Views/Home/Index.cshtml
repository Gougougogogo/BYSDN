                                @foreach (var obj in Model.LatestQuestion)
                                {
                                <li>
                                    <a style="cursor:pointer" href="@Url.Action("Details", "BBS", new { Id = obj.BBSId.ToString()})">
                                        <div class="xe-comment-entry">
                                            <div class="xe-user-img" >
                                                <img width="40" class="img-circle" src="@obj.UserImage">
                                            </div>

                                            <div class="xe-comment">
                                                <div class="xe-user-name">
                                                    <strong>@obj.Title <small>[@obj.Tags]</small></strong>
                                                </div>

                                                <p>@obj.Brief</p>
                                            </div>
                                        </div>
                                    </a>
                                </li>
                                }
                            </ul>
